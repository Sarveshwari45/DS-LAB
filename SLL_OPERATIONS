#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node *head1 = NULL, *head2 = NULL;

/* Create node */
struct node* createNode(int val) {
    struct node *n = (struct node*)malloc(sizeof(struct node));
    n->data = val;
    n->next = NULL;
    return n;
}

/* Insert at end */
void insertEnd(struct node **head, int val) {
    struct node *n = createNode(val);
    if (*head == NULL) {
        *head = n;
        return;
    }
    struct node *temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = n;
}

/* Display list */
void display(struct node *head, int listNo) {
    printf("List %d: ", listNo);
    if (head == NULL) {
        printf("NULL\n");
        return;
    }
    while (head != NULL) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

/* Reverse list */
void reverse(struct node **head) {
    struct node *prev = NULL, *curr = *head, *next;
    while (curr != NULL) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }
    *head = prev;
}

/* Sort list */
void sort(struct node *head) {
    struct node *i, *j;
    int temp;
    for (i = head; i != NULL; i = i->next) {
        for (j = i->next; j != NULL; j = j->next) {
            if (i->data > j->data) {
                temp = i->data;
                i->data = j->data;
                j->data = temp;
            }
        }
    }
}

/* Concatenate list2 into list1 */
void concatenate() {
    if (head1 == NULL) {
        head1 = head2;
        head2 = NULL;
        return;
    }
    struct node *temp = head1;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = head2;
    head2 = NULL;
}

int main() {
    int choice, val;

    while (1) {
        printf("\nMenu:\n");
        printf("1. Insert into List 1\n");
        printf("2. Insert into List 2\n");
        printf("3. Display List 1\n");
        printf("4. Display List 2\n");
        printf("5. Sort List 1\n");
        printf("6. Sort List 2\n");
        printf("7. Concatenate List 1 and List 2\n");
        printf("8. Reverse List 1\n");
        printf("9. Reverse List 2\n");
        printf("0. Exit\n");

        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter value to insert into List 1: ");
            scanf("%d", &val);
            insertEnd(&head1, val);
            break;

        case 2:
            printf("Enter value to insert into List 2: ");
            scanf("%d", &val);
            insertEnd(&head2, val);
            break;

        case 3:
            display(head1, 1);
            break;

        case 4:
            display(head2, 2);
            break;

        case 5:
            sort(head1);
            printf("List 1 sorted.\n");
            break;

        case 6:
            sort(head2);
            printf("List 2 sorted.\n");
            break;

        case 7:
            concatenate();
            printf("Lists concatenated into List 1.\n");
            break;

        case 8:
            reverse(&head1);
            printf("List 1 reversed.\n");
            break;

        case 9:
            reverse(&head2);
            printf("List 2 reversed.\n");
            break;

        case 0:
            printf("Exiting program.\n");
            exit(0);

        default:
            printf("Invalid choice\n");
        }
    }

    return 0;
}
